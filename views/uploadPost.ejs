<%- include('partials/header.ejs') %>

    <h1>Share your story!</h1>
    <div class=" flex justify-center align-center">
        <form method="post" action="/upload" class="flex f-col justify-center spacing clean-form">
            <div>
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" required <% if (locals.blog) {%>
                value="<%= blog.title %>"<%}%>>
            </div>
            <div>
                <label for="story">Share your story! </label>
                <textarea name="story" id="story" rows="7" required><% if (locals.blog) {%><%= blog.text %><%}%></textarea>
            </div>
            <% if (locals.blog) {%>
            <input type="hidden" name="idBlog" value="<%= blog.id%>">
            <%}%>
            <input type="submit" class="stripe-btn" value="Save Form">
        </form> 
    </div>


    <%- include('partials/footer.ejs') %>